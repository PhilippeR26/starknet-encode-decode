{
    // Utilisez IntelliSense pour en savoir plus sur les attributs possibles.
    // Pointez pour afficher la description des attributs existants.
    // Pour plus d'informations, visitez : https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev"
        },
        {
            "name": "client-side Chrome new without extensions",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
        },
        {
            "name": "client-side Chrome attach with extensions",
            // Create a ./chromeConfig directory.
            // source ./launchChrome.sh
            // if necessary, add needed extensions.
            // Launch debugger with this config.
            // open url http://localhost:3000
            "type": "chrome",
            "request": "attach",
            "port": 9222,
        },
        {
            "name": "client-side Firefox new without extensions",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "reAttach": true,
            "pathMappings": [
                {
                    "url": "webpack://_N_E",
                    "path": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "client-side Firefox attach with extensions",
            // source ./launchFirefox.sh
            // In console/parameters :
            //   - activate Chrome debugging
            //   - activate distant debugging 
            // Launch debugger with this config.
            // open url http://localhost:3000
            "type": "firefox",
            "request": "attach"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "runtimeArgs": [
                "--inspect"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "serverReadyAction": {
                "action": "debugWithChrome",
                "killOnServerStop": true,
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "webRoot": "${workspaceFolder}"
            }
        }
    ]
}